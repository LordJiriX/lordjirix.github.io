---
import Layout from '../layouts/Layout.astro';
---

<Layout title="LordJiriX - Home">
    <main class="homepage">
        <section class="hero">
            <h1>Welcome to LordJirix's Homepage</h1>
            <p class="subtitle">Discover my projects, docs and useless stuff.</p>
            <a href="#urls" class="cta-button">Explore URLs</a>
        </section>
        <section id="urls" class="urls-section">
            <h2>Featured URLs</h2>
            <ul class="url-list">
                <li><a href="https://astro.build/" target="_blank">Astro Official Site</a></li>
                <li><a href="https://github.com/lordjirix" target="_blank">LordJirix on GitHub</a></li>
                <li><a href="https://docs.astro.build/" target="_blank">Astro Documentation</a></li>
            </ul>
        </section>
    </main>

   
</Layout>
