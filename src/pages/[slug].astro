---
const posts = [
  {
    title: "První článek",
    slug: "prvni-clanek",
    date: "2025-06-10",
    content: "Toto je obsah prvního článku. Vítej na blogu!"
  },
  {
    title: "Druhý článek",
    slug: "druhy-clanek",
    date: "2025-06-09",
    content: "Toto je druhý příspěvek. Více obsahu brzy!"
  }
];

const { slug } = Astro.params;
const post = posts.find(p => p.slug === slug);

if (!post) {
  throw new Error(`Post '${slug}' nenalezen`);
}
---

<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <title>{post.title}</title>
    <style>
      body {
        font-family: sans-serif;
        max-width: 700px;
        margin: 2rem auto;
        padding: 1rem;
        line-height: 1.6;
      }
      h1 {
        color: #4f46e5;
        font-size: 2rem;
      }
      .back-link {
        display: inline-block;
        margin-top: 2rem;
        color: #4f46e5;
        text-decoration: none;
      }
      .back-link:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <h1>{post.title}</h1>
    <p><small>{post.date}</small></p>
    <p>{post.content}</p>
    <a class="back-link" href="/blog">← Zpět na seznam</a>
  </body>
</html>
